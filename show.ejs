<%- include('../layouts/main') %>

<h2><%= post.title %></h2>
<p><%= post.content %></p>
<a href="/posts/<%= post.id %>/edit">Edit Post</a>
<form action="/posts/<%= post.id %>/delete" method="POST" style="display:inline;">
    <button type="submit">Delete Post</button>
</form>

<h3>Comments</h3>
<ul>
    <% comments.forEach(comment => { %>
        <li>
            <%= comment.content %>
            <a href="/posts/<%= post.id %>/comments/<%= comment.id %>/edit">Edit</a>
            <form action="/posts/<%= post.id %>/comments/<%= comment.id %>/delete" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </li>
    <% }) %>
</ul>
<a href="/posts/<%= post.id %>/comments/new">Add Comment</a>